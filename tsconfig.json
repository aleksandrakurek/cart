{
   "compilerOptions": {
      "rootDir": "./",
      "baseUrl": "./src",
      "moduleResolution": "node",
      "target": "es2015",
      "jsx": "react-jsx",
      "pretty": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipDefaultLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "noErrorTruncation": true,
      "esModuleInterop": true,
      "lib": [
         "es6",
         "dom",
         // "es2016",
         "es2017.object",
         "es2019"
      ],
      "types": [
         "webpack-env",
         "node",
         "jest"
      ],
      "paths": {
         "~/*": [
            "./*"
         ]
      },
      "plugins": [
         {
            "name": "typescript-styled-plugin"
         }
      ]
   },
   "exclude": [
      "bin",
      "node_modules",
      "coverage"
   ]
}
